#:kivy 1.9.0
#:import utils kivy.utils

<MyRoot>:

    name: name
    last_name: last_name
    email: email
    output: output



    GridLayout:
        cols: 1
        size: root.width, root.height


        GridLayout:
            cols: 2
            size_hint_y: 4


            Label:
                text: "Name: "
                font_size: 30
           
            TextInput:
                id: name
                multiLine: True

            Label:
                text: "Last Name: "
                font_size: 30
            TextInput:
                id: last_name
                multiLine: True

            Label:
                text: "Email: "
                font_size: 30
            TextInput:
                id: email
                multiLine: True

        GridLayout:
            cols: 3

            Label:
                text: ""
            Button:
                text: "Submit"
                font_size: 50
                on_press: root.press()
                background_color: utils.get_color_from_hex("#cf6b99")
            Label:
                text: ""
        
        Label:
            id: output
            text: ""
            font_size: 20