#:kivy 1.9.0

<Button>
    font_size: 32
    size_hint: 0.2, 0.2
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    background_normal: ''
    background_color: (0, 0.4, 0.45, 1)

<MyRoot>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        padding: 10
        spacing: 10


        Label:
            text: "Enter your name"
            size_hint: 1, 0.5
            font_size: 54
            background_color: (20/255, 186/255, 106/255, 0.7)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            # Our text color
            color: (152/255, 3/255, 252/255, 0.8)
            bold: True
            italic: True
            outline_color: (0, 0, 0)
            outline_width: 8

        TextInput:
            hint_text: "Enter your name"
            multiline: False
        
        Label:
            text: "How many pictures do you want to analyze?"
            size_hint: 1, 0.5
            font_size: 32
            color: (1, 1, 1, 1)
            bold: True
            outline_color: (0.2, 0.2, 0.2)
            outline_width: 4

        TextInput:
            hint_text: "Enter a number"
            multiline: False
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        Button:
            text: "Submit"
        
        Button:
            text: "Clear"
            